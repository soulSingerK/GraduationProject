doctype html
html
    head
        meta(charset='UTF-8')
        title= title
        link(rel='styleSheet' href='/stylesheets/reset.css')
        link(rel='styleSheet' href='/stylesheets/register.css')
    body
        .head
            img(src="images/logo.png")
        .register-content
            .register-left
                h3 用户注册
            .register-right
                form(method="post" action="/doRegister")
                    .input-item
                        span.input-label 姓　　名
                        input(type="text" name="username" placeholder="请输入姓名" required=true)
                    .input-item
                        span.input-label 班　　级
                        input(type="text" name="userClass" placeholder="请输入您的班级" required=true)
                    .input-item
                        span.input-label 学　　号
                        input(type="number" name="studentId" placeholder="请输入您的学号" required=true)
                    .input-item
                        span.input-label 手机号码
                        input(type="number" name="telephone" placeholder="请输入手机号码" required=true)
                    .input-item
                        span.input-label 邮　　箱
                        input(type="email" name="email" placeholder="请输入邮箱" required=true)
                    .input-item
                        span.input-label 密　　码
                        input(type="password" name="password" placeholder="请输入密码" required=true)
                    .input-item
                        span.input-label 确认密码
                        input(type="password" name="pwdAgain" placeholder="请确认密码" required=true)
                    .input-item
                        a(href="javascript: void(0)").reg-btn 注册
                    .input-item
                        p.error-inform
        script(src="../javascripts/jquery-1.8.3.min.js")
        script(src="./../javascripts/register.js")